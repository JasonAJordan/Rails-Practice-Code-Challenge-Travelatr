<h1> <%= @blogger.name %> </h1> 

<% a = 0 %>
<% greatest = 0 %>
<% hugePost = nil %>

<% @blogger.posts.each do |post| %>

    <% if post.likes > greatest %>
    <% greatest = post.likes%>
    <% hugePost = post %>
    <% end %>
    <% a += post.likes %>
    
<% end %>

<p> Total likes: <%= a %> </p>

<p> <% link_to hugePost, post_path(hugePost.id) %> </p>



